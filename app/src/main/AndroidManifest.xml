<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ManifestResource">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Queries для Mobile Wallet Adapter - обнаруживает все MWA-совместимые кошельки -->
    <queries>
        <!-- Solana Mobile Wallet Adapter protocol -->
        <!-- Этот intent позволяет обнаруживать все кошельки, поддерживающие MWA -->
        <intent>
            <action android:name="solana.mobilewalletadapter.ASSOCIATE" />
        </intent>
    </queries>

    <application
        android:name=".WalletConnectApp"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WalletConnect"
        tools:replace="android:dataExtractionRules">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:label="@string/app_name"
            android:theme="@style/Theme.WalletConnect">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Deep-link для WalletConnect: kotlin-dapp-wc://request -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data 
                    android:scheme="kotlin-dapp-wc"
                    android:host="request" />
            </intent-filter>
        </activity>
    </application>

</manifest>